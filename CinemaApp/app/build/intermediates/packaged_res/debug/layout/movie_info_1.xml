<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#1D67FF"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/movie_poster"
        android:layout_width="150dp"
        android:layout_height="190dp"
        android:layout_margin="10dp"
        android:src="@drawable/kundo"
        android:contentDescription="Movie_Poster">

    </ImageView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/movie_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:text="@string/movie_name"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"></TextView>

        <ImageView
            android:id="@+id/rating"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="65dp"
            android:layout_toEndOf="@id/movie_name"
            android:contentDescription="Film_Rating"
            android:src="@drawable/ic_19"
            ></ImageView>

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/movie_name"
            android:layout_marginTop="5dp"
            android:text="@string/date"
            android:textColor="@color/white"
            android:textSize="15sp"></TextView>

        <TextView
            android:id="@+id/movie_gern"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/date"
            android:layout_marginTop="5dp"
            android:text="@string/gern"
            android:textColor="@color/white"
            android:textSize="15sp"></TextView>

        <ImageButton
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/movie_gern"
            android:layout_marginTop="15dp"
            android:background="@null"
            android:contentDescription="Good_Button"
            android:src="@drawable/ic_thumb_up"></ImageButton>

        <TextView
            android:id="@+id/num_good"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/movie_gern"
            android:layout_marginStart="5dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@id/btn1"
            android:text="@string/numgood"
            android:textColor="@color/white"

            ></TextView>

        <ImageButton
            android:id="@+id/btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/movie_gern"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@id/num_good"
            android:background="@null"
            android:src="@drawable/ic_thumb_down"
            android:contentDescription="Bad_Button"></ImageButton>

        <TextView
            android:id="@+id/num_bad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/movie_gern"
            android:layout_marginStart="5dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@id/btn2"
            android:text="@string/numbad"
            android:textColor="@color/white"

            ></TextView>
    </RelativeLayout>

</LinearLayout>
