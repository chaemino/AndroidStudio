<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:divider="?android:dividerHorizontal"
    android:orientation="horizontal"
    android:showDividers="middle">

    <RelativeLayout
        android:layout_width="137dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/advance_rate"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_horizontal|bottom"
            android:text="@string/advance_rate"
            android:textSize="18sp"></TextView>

        <TextView
            android:id="@+id/advance_rate_"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/advance_rate"
            android:gravity="center_horizontal"
            android:text="@string/advance_rate_"
            android:textSize="15sp"
            android:textStyle="bold"></TextView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="137dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/rating_"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="0dp"
            android:gravity="center_horizontal|bottom"
            android:text="@string/rating_"
            android:textSize="18sp"></TextView>

        <RatingBar
            android:id="@+id/filmrating"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rating_"
            android:layout_marginStart="10dp"
            android:gravity="center_horizontal"
            android:numStars="5"
            android:progressBackgroundTint="#CDCDCD"
            android:progressTint="#E91E63"
            android:rating="4.5"></RatingBar>

        <TextView
            android:id="@+id/filmrating_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rating_"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@id/filmrating"
            android:gravity="center_horizontal|bottom"
            android:text="@string/filmrating_num"
            android:textSize="15sp"
            android:textStyle="bold"></TextView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/accumulate_attendance"
            android:layout_width="137dp"
            android:layout_height="50dp"
            android:layout_marginBottom="5dp"
            android:gravity="center_horizontal|bottom"
            android:text="@string/accumulate_attendance"

            android:textSize="18sp"></TextView>

        <TextView
            android:id="@+id/accumulate_attendance_num"
            android:layout_width="137dp"
            android:layout_height="45dp"
            android:layout_below="@id/accumulate_attendance"
            android:gravity="center_horizontal"
            android:text="@string/accumulate_attendance_num"
            android:textSize="15sp"
            android:textStyle="bold"></TextView>

    </RelativeLayout>


</LinearLayout>
