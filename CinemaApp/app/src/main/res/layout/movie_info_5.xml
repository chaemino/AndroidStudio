<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/review_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginVertical="14dp"
                android:text="한줄평"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold"

                ></TextView>

            <Button
                android:id="@+id/review_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:backgroundTint="#00ff0000"
                android:background="#00ff0000"
                android:drawableLeft="@drawable/ic_review_selected"
                android:text="작성하기"
                android:textColor="#FF4200"
                android:textSize="15sp"
                android:textStyle="bold"></Button>

        </RelativeLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/review_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/profile"
                        android:background="@drawable/profile_img">
                    </ImageView>


                </LinearLayout>


            </LinearLayout>

        </ScrollView>

        <Button
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:id="@+id/review_all_btn"
            android:background="@drawable/shape"
            android:text="모두 보기"
            android:layout_below="@id/review_layout"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:layout_marginVertical="15dp"
            >
        </Button>

    </LinearLayout>
